<h1>Add new book</h1>
<%= form_for @book, :url => {:action => 'update', :id => @book} do |f| %>
  <p><label for="book_title">Title</label>
    <%= f.text_field 'title' %></p>
  <p><label for="book_price">Price</label>
    <%= f.text_field 'price' %></p>
  <p><label for="book_isbn">ISBN</label>
    <%= f.text_field 'isbn' %></p>
  <p><label for="book_author">Author</label>
    <%= f.text_field 'author' %></p>
  <p><label for="book_subject">Subject</label>
    <%= f.collection_select :subject_id, Subject.all, :id, :name, prompt: true %></p>
  <p><label for="book_description">Description</label>
    <%= f.text_area 'description' %></p>
  <%= f.submit 'Update' %>
<% end %>
<%= link_to 'Back', :action => 'list' %>